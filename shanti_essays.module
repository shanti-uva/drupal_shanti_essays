// This DOES apply even when using your own delivery callback
// May want to add this in the callback itself
// Also: Seems incredibly inefficient 
function shanti_essays_css_alter (&$css) {
  if (preg_match("/^shanti_essays\/whole/", SHANTI_ESSAYS_Q)) {
    global $theme_key;
    foreach ($css as $k => $v) {
      if (preg_match("/$theme_key/",$k)) {
        unset($css[$k]);
      }
    }
  }
  elseif (preg_match("/^shanti_essays\/reader/", SHANTI_ESSAYS_Q)) {
    $css_ok = array('shanti_essays_reader\.css','jquery');
    $css_pat = implode('|',$css_ok);
    foreach ($css as $k => $v) {
      if (!preg_match("/$css_pat/", $k)) unset($css[$k]);
    }
  }
}

// Seems incredibly inefficient
function shanti_essays_js_alter (&$js) {
  if (preg_match("/^shanti_essays\/reader/", SHANTI_ESSAYS_Q)) {
    $js_ok = array('shanti_essays_reader','misc');
    $js_pat = implode('|',$js_ok);
    foreach ($js as $k => $v) {
      if (!preg_match("/$js_pat/", $k)) unset($js[$k]);
    }    
  }
}

