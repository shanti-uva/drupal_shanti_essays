/* shanti_essays.css */

body .node-book {
	position: relative;	/* This fixes the IE7 overflow hidden bug */
	clear: both;
	float: left;
	width: 100%;	/* width of whole page */
	height: 100%; /* NEED TO VARY BY SCREEN */
	overflow: hidden;	/* This chops off any overhanging divs */
	box-sizing: border-box;
}

#edit-field-book-content textarea p {
	font-size:12pt;
	font-family:serif;
}

/* MODEL:
shanti-essay-page-toc
shanti-essay-page-content
  shanti-essay-page-content-body-header
    shanti-essay-page-links
    shanti-essay-page-navigation
  shanti-essay-page-content-body
  shanti-essay-page-content-body-footer
    shanti-essay-page-links
    shanti-essay-page-navigation
*/

.shanti-essay-page-navigation .book-navigation .page-links {
	border:0;
	_border-bottom:1px solid gray;
}

#shanti-essay-page-toc, 
#shanti-essay-page-content {
	float: left;
	width: 100%;
	height: 100%;
	position: relative;
	box-sizing: border-box;
}

#shanti-essay-page-content {
	width: 70%;
	text-align:justify;
}

#shanti-essay-page-toc {
	padding-left:1em;
	width: 30%;
}

#shanti-essay-page-toc .book-outline-title {
	font-weight:bold;
}

#shanti-essay-page-toc {
	font-family: sans-serif;
}

#shanti-essay-page-content-body {
	font-size: 14pt;
	height: 100%;
	margin-top: 35px;
}

#shanti-essay-page-content-body-footer,
#shanti-essay-page-content-body-header {
	width: 100%;
	font-family:sans-serif;
}

#shanti-essay-page-content-body-header {
	position: absolute;
	_background-color:rgba(255,255,255,.8);
}

/*
#shanti-essay-page-toc:only-child,
#shanti-essay-page-content:only-child,
#shanti-essay-page-content-body:only-child,
#shanti-essay-page-content-body-footer:only-child {
	width: 100%;
}
*/

#shanti-essay-page-content-body img {
	_border:1px solid gray;
	_padding:3px;
}

#shanti-essay-page-content-body img.left {
	float: left;
	margin-right: 1em;
}

#shanti-essay-page-content-body img.right {
	float: right;
	margin-left: 1em;
	
}

#shanti-essay-page-content-body blockquote {
	font-size:13pt;
	background:none;
	border:none;
	padding:0!important;
	margin:0 1em!important;
	font-style:normal;
}

#shanti-essay-page-content-body blockquote:before,
#shanti-essay-page-content-body blockquote:after {
	content: '';
}

#shant-essay-page-extra {
	display:block;	
	clear:both;
}

#shanti-essay-page-content-body { font-size:16pt; font-family:Garamond; padding: 0 .5em 0 0; }
#shanti-essay-page-content-body p { margin:.5em 0; padding:0; }


#shanti-essay-page-toc ul.links {
	display:block;
	margin-top:1em;
	_padding-top:1em;
	_border-top:1px solid gray;	
	_padding-bottom:1em;
	_border-bottom:1px solid gray;	
}

#shanti-essay-page-toc ul.links li {
	display:block;
	text-align:left;
	_padding-left:2em;
}

#shanti-essay-page-toc ul.links li:before {
	content: "\00BB";
	margin-right: 6px;
	font-size:12pt;
}

#shanti-essay-page-toc ul.links li a {
	font-size:10.5pt;
}

/* FILTERS */

.shanti-essays-pullquote-right {
	width:40%;
	font-family:sans-serif;
	text-align:left;
	font-size: 16pt;
	font-weight:bold;
	float:right;
	border-top: 5px solid black;
	border-bottom: 5px solid black;
	padding:.5em 0;
	margin-top: .5em;
	margin-left: .5em;
	margin-bottom:.5em;
}

.shanti-essays-pullquote-left {
	width:40%;
	font-family:sans-serif;
	text-align:left;
	font-size: 16pt;
	font-weight:bold;
	float:left;
	border-top: 5px solid black;
	border-bottom: 5px solid black;
	padding:.5em 0;
	margin-top: .5em;
	margin-right: .5em;
	margin-bottom:.5em;
}

.submitted {
	border-top:1px solid gray;
	margin-top:1em;
	padding-top:1em;
}
