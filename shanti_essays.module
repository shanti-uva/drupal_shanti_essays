function _shanti_essays_mega_search_query($search_str) {
  $results = array();
  if (!$search_str) {
    // Or show everything?
    $results[] = "<b>You did not enter a search string.</b>"; 
  } 
  else {
    $sql = "SELECT b.bid, n.nid, p.title as 'parent', n.title "
      . "FROM {field_data_field_book_content} c "
      . "JOIN {node} n ON (c.entity_id = n.nid) "
      . "JOIN {book} b ON (b.nid = n.nid) "
      . "JOIN {node} p ON (b.bid = p.nid) "
      . "WHERE {field_book_content_value} RLIKE :search_str "
      . "ORDER BY p.title, n.title "
      ;
    $rs = db_query($sql, array(':search_str' => $search_str));
    $results = array();
    while ($r = $rs->fetchAssoc()) {
      $results[] = $r['parent'] .': ' . l($r['title'], "node/".$r['bid'], array('fragment' => 'book-node-' . $r['nid'], 'attributes' => array('class' => array(''))));
    }    
  }
  return $results;  
}

// Note that we don't pass $form_state by reference (i.e. no & prefix)
function shanti_essays_mega_search_form_callback($form, $form_state) {
  $search_str = $form_state['values']['mega_search_string'];
  $items      = _shanti_essays_mega_search_query($search_str);
  watchdog_array('SHANTI','items in callback',$items);
  return array(
    '#theme'      => 'item_list',
    '#type'       => 'ol',
    '#attributes' => array('id' => 'shanti-essays-mega-search-results'),
    '#items'      => $items,
  );
}

