/** 
 * Here we attempt to remove any theme and module specific CSS and JS files from our viewer, 
 * which we want to be pristine. 
 */
function shanti_essays_css_alter(&$css) {
  if (preg_match("/^shanti_essays\/whole/", SHANTI_ESSAYS_Q)) {
    foreach ($css as $key => $val) {
      if (preg_match("/sites\/all/",$key) && !preg_match("/shanti_essays/",$key)) {
        unset($css[$key]);
      }
    }
  }
}

function shanti_essays_js_alter(&$js) {
  if (preg_match("/^shanti_essays\/whole/", SHANTI_ESSAYS_Q)) {
    foreach ($js as $key => $val) {
      if (preg_match("/sites\/all/",$key) && !preg_match("/shanti_essays/",$key)) {
        unset($js[$key]);
      }
    }
  }  
}
