function shanti_essays_reader_callback($page_callback_result) {
  drupal_page_header();
  if (isset($page_callback_result) && is_null(drupal_get_http_header('Content-Type'))) {
    drupal_add_http_header('Content-Type', 'text/html; charset=utf-8');
    $content = is_string($page_callback_result) ? $page_callback_result : drupal_render($page_callback_result);
    $html = "<!DOCTYPE html>\n";
    $html .= "<html>\n";
    $html .= "<head>\n";
    $html .= "<title>SHANTI Essay Reader</title>\n";
    $html .= "<meta name=\"viewport\" content=\"width=device-width, user-scalable=no\" />\n";
    $html .= drupal_get_css(); // Altered
    $html .= drupal_get_js(); // Altered
    $html .= "</head>\n";
    $html .= "<body>\n";
    $html .= $content;
    $html .= "</body>\n";
    $html .= "</html>\n";
    print $html;
  }
  drupal_page_footer();  
}
  
